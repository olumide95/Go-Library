
{{ template "header" .}}
 <main class="container">
 <h4>Update Book</h4>
 <br/>

<form id="update-book-form">

<div class="row">
  <div class="row pb-2">
    <div class="col-4">
      <div class="form-group">
        <input type="text" class="form-control" name="title" id="title" value="" placeholder="Tile">
      </div>
    </div>

    <div class="col-3">
      <div class="form-group">
        <input type="text" class="form-control" name="author" id="author" value="" placeholder="Author">
      </div>
    </div>

    <div class="col-3">
      <div class="form-group">
        <input type="number" class="form-control" name="quantity" id="quantity" value="" placeholder="Quantity">
      </div>
    </div> 
  </div> 
</div>
<br/>
<button class="btn btn-md btn-primary" type="submit">Update Book</button>
</form>

</main>
 
{{ template "footer" .}}
<script src="/assets/js/update-book.js"></script>
